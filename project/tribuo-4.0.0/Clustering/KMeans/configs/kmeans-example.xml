<!--
    Description:
        An example configuration file for a K-Means Trainer.

        Uses 4 threads, finds 16 centres using a max of 500 iterations.
-->

<config>
    <component name="kmeans" type="org.tribuo.clustering.kmeans.KMeansTrainer">
        <property name="centroids" value="16"/>
        <property name="iterations" value="500"/>
        <property name="distanceType" value="EUCLIDEAN"/>
        <property name="seed" value="12345"/>
        <property name="numThreads" value="4"/>
    </component>
</config>
